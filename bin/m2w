#!/usr/bin/env ruby

require 'mail'
require 'tempfile'

DEBUG = true

content = ARGF.read
tmpfile = Tempfile.new('mail-')
tmpfile.write content
tmpfile.close

mail = Mail.read tmpfile.path

if mail.multipart?
  puts "#{mail.parts.map { |p| p.content_type }.join("\n")}" if DEBUG
else
  puts 'no parts' if DEBUG
end
